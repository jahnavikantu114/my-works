- name: Setup Apache and move fstab on RedHat
  hosts: all
  become: true
  gather_facts: false

  tasks:
    - name: Install Apache
      yum:
        name: httpd
        state: present

    - name: Start and enable Apache service
      service:
        name: httpd
        state: started
        enabled: true

    - name: Move fstab file to /tmp
      command: mv /etc/fstab /tmp/fstab
